<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DrawableTextView">
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="DialogTitle">
        <attr name="title" />
        <attr name="close_style" format="enum">
            <enum name="button" value="0" />
            <enum name="fork" value="1" />
        </attr>
        <attr name="close_text" format="string" />
    </declare-styleable>

    <declare-styleable name="EditTextWithClear">
        <attr name="hint" format="string" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SettingItemView">
        <attr name="icon" format="reference" />
        <attr name="name" format="string" />
        <attr name="rightText" format="string" />
        <attr name="rightImage" format="string" />
        <attr name="showRightArrow" format="boolean" />
    </declare-styleable>


</resources>